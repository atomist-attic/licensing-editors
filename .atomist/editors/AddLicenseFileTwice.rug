@description "runs AddLicenseFile twice for testing"
@tag "license"
@tag "documentation"
@tag "test"
editor AddLicenseFileTwice

@displayName "First License File"
@description "name of the first license file to add"
@validInput "the name of a license template without the .yml extension, see https://github.com/atomist-rugs/licensing-editors/tree/master/.atomist/templates"
@minLength 1
@maxLength 20
param first_license_name: ^\w[-\w.]*$

@displayName "Second License File"
@description "name of the second license file to add"
@validInput "the name of a license template without the .yml extension, see https://github.com/atomist-rugs/licensing-editors/tree/master/.atomist/templates"
@minLength 1
@maxLength 20
param second_license_name: ^\w[-\w.]*$

AddLicenseFile license_name = first_license_name
AddLicenseFile license_name = second_license_name
